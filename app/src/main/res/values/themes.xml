<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cottontails" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_wrapper</item>
        <item name="windowSplashScreenAnimationDuration">10</item>
        <item name="postSplashScreenTheme">@style/Theme.Cottontails</item>
    </style>
    <style name="CardViewTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="cardBackgroundColor">@color/yellow</item>
    </style>
    <style name="TextRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="TextBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="TextLight" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>
    <style name="TextSemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TextThin" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_thin</item>
    </style>
    <style name="Circular">
        <item name="cornerSize">20%</item>
    </style>
    <style name="Circular10">
        <item name="cornerSize">10%</item>
    </style>
    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
</resources>