<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:elevation="8dp"
            android:id="@+id/layout_top_background"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/custom_layout_background_gradient">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perawatan"
                android:textColor="@color/pure_white"
                style="@style/TextMedium"
                android:textSize="32sp"
                android:layout_marginTop="24dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/image_background_perawatan"/>
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="8dp"
            android:id="@+id/layout_card_view_bersihkan_kandang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="4dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/layout_top_background"
            app:layout_constraintBottom_toTopOf="@id/layout_card_view_perawatan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bunny2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">
                <TextView
                    android:id="@+id/text_view_estimasi_berishkan_kandang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ayo bersihkan kandang"
                    style="@style/TextRegular"/>
                <TextView
                    android:id="@+id/text_view_hitung_mundur_hari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="14 hari lagi"
                    tools:textSize="18sp"
                    style="@style/TextMedium"
                    android:textColor="@color/green"/>
            </LinearLayout>
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_molting_kelinci"
            app:cardCornerRadius="12dp"
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_top_background"
            >
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Molting Kelinci"
                        android:layout_marginBottom="4dp"
                        style="@style/TextRegular"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/text_nama_kelinci"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Molly"
                        style="@style/TextMedium"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/text_view_hitung_mundur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        tools:text="40 hari lagi" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:src="@drawable/image_card_view_perawatan"
                        />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.flexbox.FlexboxLayout
            app:layout_constraintBottom_toTopOf="@id/layout_card_view_perawatan_2"
            android:id="@+id/layout_card_view_perawatan"
            android:paddingHorizontal="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="space_evenly"
            app:layout_constraintTop_toBottomOf="@id/layout_card_view_bersihkan_kandang">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_periksa_kesehatan"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:src="@drawable/image_periksa_card_view_fragment_pewatan" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Periksa Kesehatan"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="#98A2FF"
                        android:textColor="@color/pure_white"
                        style="@style/TextRegular"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/card_view_kawinkan_kelinci"
                android:layout_height="180dp"
                android:layout_width="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:src="@drawable/image_kawin_card_view_fragment_perawatan" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kawinkan Kelinci"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textColor="@color/pure_white"
                        style="@style/TextRegular"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_beri_pakan_tambahan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:src="@drawable/image_card_view_perawatan" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Beri Pakan Tambahan"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@color/light_pink"
                        android:textColor="@color/pure_white"
                        style="@style/TextRegular"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            app:layout_constraintTop_toBottomOf="@id/layout_card_view_perawatan"
            android:id="@+id/layout_card_view_perawatan_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="28dp"
            app:justifyContent="space_evenly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_text_view_kelinci_hamil"
            >


        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_text_view_kelinci_hamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_card_view_perawatan_2"
            app:justifyContent="space_around"
            >
            <TextView
                android:id="@+id/text_view_kelinci_hamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSemiBold"
                android:textSize="16sp"
                android:text="Kelinci Hamil" />
            <TextView
                android:id="@+id/text_view_lihat_kelinci_hamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                style="@style/TextMedium"
                android:textColor="@color/red"
                />
        </com.google.android.flexbox.FlexboxLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="16dp"
            android:id="@+id/recycler_view_card_kawin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_text_view_kelinci_hamil">

        </androidx.recyclerview.widget.RecyclerView>
        <com.google.android.flexbox.FlexboxLayout
            app:alignItems="center"
            android:layout_marginTop="16dp"
            app:justifyContent="space_around"
            android:id="@+id/layout_text_view_periksa_kelinci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_card_kawin"
            app:layout_constraintBottom_toTopOf="@id/recycler_view_periksa_kesehatan">
            <TextView
                android:id="@+id/text_view_periksa_kelinci"
                style="@style/TextSemiBold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periksa Kesehatan"/>
            <TextView
                android:id="@+id/text_view_lihat_periksa_kesehatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                style="@style/TextMedium"
                android:textColor="@color/red"
                />
        </com.google.android.flexbox.FlexboxLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="16dp"
            android:id="@+id/recycler_view_periksa_kesehatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout_text_view_pakan_tambahan"
            app:layout_constraintTop_toBottomOf="@id/layout_text_view_periksa_kelinci"/>

        <com.google.android.flexbox.FlexboxLayout
            app:alignItems="center"
            android:layout_marginTop="16dp"
            app:justifyContent="space_around"
            android:id="@+id/layout_text_view_pakan_tambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_periksa_kesehatan"
            app:layout_constraintBottom_toTopOf="@id/recycler_view_pakan_tambahan">
            <TextView
                android:id="@+id/text_view_pakan_tambahan"
                style="@style/TextSemiBold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakan Tambahan"/>
            <TextView
                android:id="@+id/text_view_lihat_pakan_tambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semua"
                style="@style/TextMedium"
                android:textColor="@color/red"
                />
        </com.google.android.flexbox.FlexboxLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:padding="16dp"
            android:id="@+id/recycler_view_pakan_tambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_text_view_pakan_tambahan"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
