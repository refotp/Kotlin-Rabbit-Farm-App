<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PeriksaKesehatanActivity">
    <LinearLayout
        android:padding="24dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_background_gradient"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periksa Kesehatan"
            android:textColor="@color/pure_white"
            style="@style/TextMedium"
            android:textSize="32sp"
            android:layout_marginTop="24dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/image_view_bottom_background_form_perawatan"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_card_periksa"
        app:layout_constraintTop_toBottomOf="@id/layout_top_background"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>