<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_keuangan"
    android:layout_width="280dp"
    android:layout_height="228dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
     >
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:id="@+id/text_view_nama_kartu"
            style="@style/TextRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pure_white"
            android:textSize="20sp"
            tools:text="Nama Kartu" />

        <TextView
            android:textColor="@color/pure_white"
            android:id="@+id/text_view_jumlah_kartu"
            style="@style/TextSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            tools:text="Rp 10.000.000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_keterangan"
            android:textSize="14sp"
            style="@style/TextRegular"
            android:textColor="@color/pure_white"
            tools:text="haha"

            />
        <ImageView
            android:id="@+id/image_view_gambar_kartu"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/image_card_view_keuangan_perawatan"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>