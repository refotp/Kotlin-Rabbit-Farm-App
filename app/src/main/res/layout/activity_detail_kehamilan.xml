<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.DetailKehamilanActivity">
        <ImageView
            android:elevation="8dp"
            android:layout_margin="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/icon_back"
            android:translationZ="4dp"
            android:id="@+id/image_view_back_button"
            android:clickable="true"
            app:tint="@color/pure_white"
            android:focusable="true" />
        <LinearLayout
            android:id="@+id/layout_top_background"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:padding="24dp"
            android:elevation="8dp"
            android:orientation="vertical"
            android:background="@drawable/custom_layout_background_gradient">
            <TextView
                style="@style/TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Kehamilan"
                android:textSize="32sp"
                android:layout_marginTop="24dp"
                android:textColor="@color/pure_white"/>

        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="100dp"
            app:cardCornerRadius="16dp"
            android:id="@+id/card_view_image_kelinci"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardUseCompatPadding="false">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_view_desc_kelinci"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/test_keliunci2"/>
            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/text_view_nama_kelinci_hamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "Lola"
            android:gravity="center"
            style="@style/TextMedium"
            android:textSize="28sp"
            app:layout_constraintTop_toBottomOf="@id/card_view_image_kelinci"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout_card_view_info_kehamilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_view_nama_kelinci_hamil"
            android:layout_marginTop="12dp"
            app:flexWrap="wrap"
            app:justifyContent="space_evenly"
            app:alignContent="center"
            app:alignItems="center">
            <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="12dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_date"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kawin"
                        style="@style/TextRegular"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/text_view_tanggal_kawin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text = "12 Oktober, 2023"
                        style="@style/TextMedium"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/green">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        app:tint="@color/red"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/icon_melahirkan"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_view_title_estimasi_melahirkan"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Estimasi Melahirkan"
                            style="@style/TextRegular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/text_view_estimasi_melahirkan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text = "12 Oktober, 2023"
                            style="@style/TextMedium"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/green">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        app:tint="@color/red"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_male"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelinci Jantan"
                            style="@style/TextRegular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/text_view_kelinci_jantan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Rojali"
                            style="@style/TextMedium"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/green">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        app:tint="@color/red"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/icon_keterangan"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keterangan"
                            style="@style/TextRegular"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/text_view_keterangan_hamil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            style="@style/TextMedium"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/green">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.google.android.flexbox.FlexboxLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="space_evenly"
            app:layout_constraintTop_toBottomOf="@id/layout_card_view_info_kehamilan"
            >
            <Button
                android:id="@+id/button_edit_data"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Edit Data"
                android:layout_marginBottom="12dp"/>
            <Button
                android:id="@+id/button_hapus_data"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:layout_marginBottom="12dp"/>
        </com.google.android.flexbox.FlexboxLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
